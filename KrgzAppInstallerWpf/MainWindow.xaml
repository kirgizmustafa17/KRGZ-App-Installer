<Window x:Class="KrgzAppInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KRGZ App Installer" Width="980" Height="720"
        WindowStartupLocation="CenterScreen" MinWidth="750" MinHeight="500"
        Background="#202020" FontFamily="Segoe UI" Foreground="#E4E4E4"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
        <!-- ══════════ WinUI ComboBox Dark Style ══════════ -->
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Foreground" Value="#E4E4E4"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="border" Background="#2D2D2D" BorderBrush="#3D3D3D" 
                                    BorderThickness="1" CornerRadius="4" Padding="{TemplateBinding Padding}"
                                    SnapsToDevicePixels="True">
                                <Grid>
                                    <ContentPresenter IsHitTestVisible="False" 
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                      VerticalAlignment="Center" Margin="0,0,20,0"/>
                                    <Path x:Name="arrow" Data="M0,0 L4,4 8,0" Stroke="#9E9E9E" StrokeThickness="1.5"
                                          HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,1,4,0"/>
                                </Grid>
                            </Border>
                            <ToggleButton IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Background="Transparent" BorderThickness="0" Opacity="0" Cursor="Hand"/>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" AllowsTransparency="True"
                                   PopupAnimation="Slide" Focusable="False">
                                <Border Background="#2D2D2D" BorderBrush="#4D4D4D" BorderThickness="1" 
                                        CornerRadius="6" Padding="2" Margin="0,2,0,0"
                                        MinWidth="{TemplateBinding ActualWidth}">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.4" Color="Black"/>
                                    </Border.Effect>
                                    <ScrollViewer MaxHeight="220" VerticalScrollBarVisibility="Auto">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#5D5D5D"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#60CDFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItem Dark -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#E4E4E4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10,7"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="bg" Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}" Margin="2,1">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#383838"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bg" Property="Background" Value="#0F3B5F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ══════════ WinUI Button Styles ══════════ -->
        <Style x:Key="BtnBase" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.88"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.72"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Install Button -->
        <Style x:Key="BtnInstall" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#0078D4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Cancel Button -->
        <Style x:Key="BtnCancel" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#C42B1C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#C42B1C"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Ghost/Subtle Button -->
        <Style x:Key="BtnGhost" TargetType="Button" BasedOn="{StaticResource BtnBase}">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="#E4E4E4"/>
            <Setter Property="BorderBrush" Value="#3D3D3D"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Sidebar Button -->
        <Style x:Key="BtnSidebar" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,0,12,0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,1,0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="3,0,0,0" CornerRadius="0,4,4,0"
                                Padding="{TemplateBinding Padding}" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2D2D2D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Checkbox Dark Style -->
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#E4E4E4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Search TextBox -->
        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="CaretBrush" Value="#60CDFF"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- ScrollBar Slim -->
        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ═══════════ HEADER ═══════════ -->
        <Border Grid.Row="0" Background="#1C1C1C" BorderBrush="#333333" BorderThickness="0,0,0,1">
            <Grid Margin="20,10">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="⚡" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtTitle" Text="KRGZ App Installer" FontSize="18" FontWeight="SemiBold" Foreground="#FFFFFF" VerticalAlignment="Center"/>
                    <Border Background="#0F3B5F" CornerRadius="10" Padding="8,2" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="txtVersion" Text="v1.0 • Native" FontSize="10" Foreground="#60CDFF"/>
                    </Border>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <ComboBox x:Name="cmbLang" Style="{StaticResource DarkComboBox}" MinWidth="100" VerticalAlignment="Center" Margin="0,0,16,0" SelectionChanged="CmbLang_SelectionChanged"/>
                    <CheckBox x:Name="chkSilent" IsChecked="True" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock x:Name="txtSilent" Text="Sessiz Kurulum" Foreground="#9E9E9E" VerticalAlignment="Center" FontSize="13"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ═══════════ CONTENT ═══════════ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="210"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="#1C1C1C" BorderBrush="#333333" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="pnlSidebar" Margin="6,8"/>
                </ScrollViewer>
            </Border>

            <!-- RIGHT PANEL -->
            <Grid Grid.Column="1" Background="#202020">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- SEARCH + FILTER -->
                <Grid Grid.Row="0" Margin="16,10,16,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="#2D2D2D" CornerRadius="4" BorderBrush="#3D3D3D" BorderThickness="1" Padding="12,7" Margin="0,0,8,0">
                        <Grid>
                            <TextBlock x:Name="txtSearchHint" Text="🔍 Uygulama ara..." Foreground="#6E6E6E" FontSize="14" VerticalAlignment="Center" IsHitTestVisible="False"/>
                            <TextBox x:Name="txtSearch" Style="{StaticResource SearchBox}" TextChanged="TxtSearch_TextChanged"/>
                        </Grid>
                    </Border>
                    <ComboBox x:Name="cmbFilter" Grid.Column="1" Style="{StaticResource DarkComboBox}" MinWidth="160" SelectedIndex="0" SelectionChanged="CmbFilter_SelectionChanged">
                        <ComboBoxItem Content="Tümü"/>
                        <ComboBoxItem Content="Yüklü Olanlar"/>
                        <ComboBoxItem Content="Yüklü Olmayanlar"/>
                        <ComboBoxItem Content="Güncelleme Var"/>
                    </ComboBox>
                </Grid>

                <!-- APP LIST -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="16,6,16,0" Padding="0,0,4,0">
                    <StackPanel x:Name="pnlApps"/>
                </ScrollViewer>

                <!-- ACTION BAR -->
                <Border Grid.Row="2" Background="#1C1C1C" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="16,10">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                            <Button x:Name="btnSelectAll" Content="Tümünü Seç" Padding="14,6" Margin="0,0,6,0" Style="{StaticResource BtnGhost}" Click="BtnSelectAll_Click"/>
                            <Button x:Name="btnDeselectAll" Content="Temizle" Padding="14,6" Margin="0,0,6,0" Style="{StaticResource BtnGhost}" Click="BtnDeselectAll_Click"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                            <TextBlock x:Name="txtSelected" Text="0 uygulama seçili" Foreground="#9E9E9E" VerticalAlignment="Center" Margin="0,0,14,0" FontSize="13"/>
                            <Button x:Name="btnCancel" Content="İptal" Padding="14,6" Style="{StaticResource BtnCancel}" Click="BtnCancel_Click" Visibility="Collapsed"/>
                            <Button x:Name="btnInstall" Content="⚡ Yükle" Padding="22,7" Style="{StaticResource BtnInstall}" Click="BtnInstall_Click"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- ═══════════ STATUS BAR ═══════════ -->
        <Border Grid.Row="2" Background="#1C1C1C" BorderBrush="#333333" BorderThickness="0,1,0,0" Padding="20,7">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="txtStatus" Text="Hazır" Foreground="#9E9E9E" FontSize="12" Grid.Row="0"/>
                <ProgressBar x:Name="prgProgress" Height="3" Grid.Row="1" Margin="0,5,0,0" 
                             Background="#333333" Foreground="#60CDFF" Value="0" Maximum="100" 
                             BorderThickness="0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
