<Window x:Class="KrgzAppInstaller.AppRemovalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Windows Uygulamalarını Kaldır" Width="700" Height="620"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize"
        Background="#0D1117" Foreground="#C9D1D9" FontFamily="Segoe UI"
        MinWidth="500" MinHeight="400">

    <Window.Resources>
        <Style x:Key="BtnSmall" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="5" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0">
            <TextBlock Text="Windows Uygulamalarını Kaldır" FontSize="18" FontWeight="Bold" Foreground="#F0F6FC" Margin="0,0,0,4"/>
            <TextBlock Text="Get-AppxPackage" FontSize="11" Foreground="#484F58" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,6"/>
        </Grid>

        <!-- Search -->
        <Border Grid.Row="1" Background="#161B22" CornerRadius="8" BorderBrush="#30363D" BorderThickness="1" Padding="10,6" Margin="0,8,0,8">
            <Grid>
                <TextBlock x:Name="txtSearchHint" Text="Uygulama ara..." Foreground="#484F58" FontSize="13" VerticalAlignment="Center" IsHitTestVisible="False"/>
                <TextBox x:Name="txtSearch" Background="Transparent" Foreground="#F0F6FC" BorderThickness="0" FontSize="13" VerticalAlignment="Center" CaretBrush="#58A6FF" TextChanged="TxtSearch_TextChanged"/>
            </Grid>
        </Border>

        <!-- App List -->
        <Border Grid.Row="2" Background="#161B22" CornerRadius="8" BorderBrush="#30363D" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="4">
                <StackPanel x:Name="pnlApps"/>
            </ScrollViewer>
        </Border>

        <!-- Action Bar -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Button x:Name="btnSelectAll" Content="Tümünü Seç" Padding="12,5" Margin="0,0,6,0" FontSize="12" Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" Style="{StaticResource BtnSmall}" Click="BtnSelectAll_Click"/>
                <Button x:Name="btnDeselectAll" Content="Temizle" Padding="12,5" Margin="0,0,6,0" FontSize="12" Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" Style="{StaticResource BtnSmall}" Click="BtnDeselectAll_Click"/>
                <Button x:Name="btnRefresh" Content="Yenile" Padding="12,5" FontSize="12" Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" Style="{StaticResource BtnSmall}" Click="BtnRefresh_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                <TextBlock x:Name="txtSelected" Text="0 seçili" Foreground="#8B949E" VerticalAlignment="Center" Margin="0,0,12,0" FontSize="13"/>
                <Button x:Name="btnClose" Content="Kapat" Padding="14,6" Margin="0,0,6,0" FontSize="13" Background="#21262D" Foreground="#C9D1D9" BorderBrush="#30363D" Style="{StaticResource BtnSmall}" Click="BtnClose_Click"/>
                <Button x:Name="btnRemove" Content="Seçilenleri Kaldır" Padding="16,6" FontSize="13" FontWeight="SemiBold" Background="#B62324" Foreground="White" BorderBrush="#DA3633" Style="{StaticResource BtnSmall}" Click="BtnRemove_Click"/>
            </StackPanel>
        </Grid>

        <!-- Status -->
        <TextBlock Grid.Row="4" x:Name="txtStatus" Text="Uygulamalar yükleniyor..." Foreground="#8B949E" FontSize="12" Margin="0,8,0,0" TextWrapping="Wrap"/>
    </Grid>
</Window>
